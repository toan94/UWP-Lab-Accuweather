<Page x:ConnectionId='1'
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:data="using:App1.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/weather.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <RelativePanel />
        <RelativePanel>
            <TextBlock x:ConnectionId='15' x:Name="WeatherLocation"
                       Margin="0,35,0,0"
                       FontFamily="Segoe UI"
                       FontSize="45"
                       FontWeight="Thin"
                       RelativePanel.AlignHorizontalCenterWithPanel="true"
                       Text="Hà Nội"/>
            <TextBlock x:ConnectionId='16' x:Name="WeatherDescriptionTextBlock"
                       Margin="0,95,0,0"
                       FontFamily="Segoe MDL2 Asset"
                       FontSize="18"
                       FontWeight="Thin"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"/>
            <TextBlock x:ConnectionId='17' x:Name="WeatherTemperatureTextBlock"
                       Margin="0,134,0,0"
                       FontFamily="Segoe MDL2 Asset"
                       FontSize="85"
                       FontWeight="Thin"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       Text="123123"/>
            <TextBlock x:ConnectionId='18' x:Name="Today"
                       Margin="0,0,10,10"
                       FontFamily="Arial"
                       FontSize="13"
                       FontWeight="Medium"
                       RelativePanel.AlignRightWithPanel="true"
                       RelativePanel.AlignTopWithPanel="True"
                       Text="1234"/>
            <TextBlock x:ConnectionId='19' x:Name="MaxTemperature"
                       Margin="0,0,60,10"
                       FontFamily="Arial"
                       FontSize="13"
                       FontWeight="Medium"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       Text="1234"/>
            <TextBlock x:ConnectionId='20' x:Name="MinTemperature"
                       Foreground="Brown"
                       Margin="0,0,20,10"
                       FontFamily="Arial"
                       FontSize="13"
                       FontWeight="Medium"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       Text="1234"/>
        </RelativePanel>
        <ScrollViewer 
            Grid.Row="1"
            Padding="10,0,10,10"
            HorizontalScrollBarVisibility="auto"
            VerticalScrollBarVisibility="Hidden">
            <GridView x:ConnectionId='9'                                        >
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate                              >
                        <StackPanel x:ConnectionId='11' Width="45" HorizontalAlignment="Stretch">
                            <TextBlock x:ConnectionId='12' HorizontalAlignment="Center" FontSize="11"                         />
                            <Image x:ConnectionId='13' Width="30" Height="30" Margin="0,4,0,12" HorizontalAlignment="Center"                              />
                            <TextBlock x:ConnectionId='14' HorizontalAlignment="Center" FontFamily="Segoe MDL2 Asset" FontSize="13"                                  />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>
        <GridView  />
        <GridView x:ConnectionId='2' Grid.Row="2"
                  Margin="10,0,10,0"
                  Padding="10"
                                                        >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate                                >
                    <RelativePanel x:ConnectionId='4' Width="320">
                        <TextBlock x:ConnectionId='5'                     />
                        <Image x:ConnectionId='6' x:Name="ImageWeather"
                               Width="30"
                               Height="30"
                               RelativePanel.AlignHorizontalCenterWithPanel="true"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                                                         />
                        <TextBlock x:ConnectionId='7' Margin="38, 0 ,0 ,0"
                                   
                                   RelativePanel.RightOf="ImageWeather"
                                                                            />
                        <TextBlock x:ConnectionId='8' Margin="76, 0,0,0"
                                  
                                   FontSize="13"
                                   Foreground="Brown"
                                   RelativePanel.RightOf="ImageWeather"
                                                                            />
                    </RelativePanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

